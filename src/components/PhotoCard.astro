        {photo.settings.focalLength && <div>ğŸ“ {photo.settings.focalLength}</div>}
      </div>
      
      {photo.filmSimulation && (
        <div class="text-xs text-orange-300 mb-2">ğŸ¨ {photo.filmSimulation}</div>
      )}
      
      <div class="flex justify-between text-xs text-gray-400">
        <span>{new Date(photo.date).toLocaleDateString('ja-JP')}</span>
        {photo.tags.length > 0 && (
          <span>#{photo.tags[0]}</span>
        )}
      </div>
    </div>
